{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "build",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
